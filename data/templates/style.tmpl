{{define "css"}}

<style>

.nav-wrap {
	min-height: 50px;
}

.nav-list {
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.nav-list li {
	float: left;
	min-width: 80px;
}

.nav-list li a {
	color: black;
	font-size: 1.2em;
}

.nav-dropdown {
	position: relative;
	display: inline-block;
}

.nav-dropdown:hover .nav-dropdown-minor {
	display: block;
}

.nav-dropdown-major {
	padding: 16px;
	border: none;
	text-decoration: none;
	display: block;
}

.nav-dropdown-minor {
	display: none;
	position: absolute;
	min-width: 120px;
	box-shadow: 0px 8px 16px 0px rgba(0,0,0,.2);
	z-index: 1;
}

.nav-dropdown-minor a {
	color: black;
	padding: 6px 8px;
	font-size: 1em !important;
	text-decoration: none;
	display: block;
}

</style>

{{end}}
